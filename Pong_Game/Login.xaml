<Window x:Class="Pong_Game.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_Game"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800"  ResizeMode="NoResize">

    <Grid>
        <Canvas Background="black" x:Name="LoginWindow">
            <Rectangle x:Name="Background" 
                       Fill="White" 
                       Opacity="0.07" 
                       Width="350" 
                       Height="250" 
                       Canvas.Left="225" 
                       Canvas.Top="92"/>
            <TextBox x:Name="Username" 
                     Width="250" 
                     Height="30" 
                     Canvas.Left="275" 
                     Canvas.Top="182" 
                     Text="Enter Username" 
                     FontSize="20" 
                     FontFamily="Arial" GotFocus="enterUsername"/>
            <TextBox x:Name="Password" 
                     Width="250" 
                     Height="30" 
                     Canvas.Left="275" 
                     Canvas.Top="230" 
                     Text="Password" 
                     FontSize="20" 
                     FontFamily="Arial" GotFocus="enterPassword" />
            <TextBlock Text="Login" 
                       Foreground="White" 
                       FontFamily="Arial" 
                       FontSize="50" 
                       Canvas.Left="339" 
                       Canvas.Top="101"/>
            <Button Height="25" 
                    Width="100" 
                    Canvas.Left="350" 
                    Canvas.Top="274" 
                    Content="Login" 
                    Background="DarkRed" 
                    Foreground="White" 
                    FontFamily="Arial" 
                    FontSize="15" 
                    BorderBrush="Goldenrod"
                    BorderThickness="2.5" 
                    Click="LoginCheck"/>
            <Button x:Name="BackToStart" 
                    Height="40" 
                    Width="90" 
                    Foreground="White" 
                    Background="DarkRed" 
                    Content="Back to Start" 
                    FontFamily="Arial" 
                    FontSize="13" Click="BackToStart_Click"/>
            <Button x:Name="Register" 
                    Content="Register" 
                    Width="100" 
                    Height="25" 
                    Background="DarkRed" 
                    Foreground="White" 
                    FontFamily="Arial" 
                    FontSize="15" 
                    BorderBrush="Goldenrod" 
                    BorderThickness="2.5" 
                    Canvas.Left="350" 
                    Canvas.Top="304" 
                    Click="Register_Click"/>
        </Canvas>
    </Grid>
</Window>
