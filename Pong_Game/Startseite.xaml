<Window x:Class="Pong_Game.Startseite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_Game"
        mc:Ignorable="d"
        Title="Startseite" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="StartScreen" Background="Black">
            <TextBlock x:Name="Title"                   
                       Text="Pong-Game" 
                       FontFamily="Arial" 
                       TextAlignment="Center" 
                       FontSize="70" 
                       Foreground="DarkRed" Canvas.Left="211" Canvas.Top="90" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Button x:Name="twoPlayerButton"
                    Background="DarkRed" 
                    Content="Multi-Player" 
                    Foreground="White" 
                    FontSize="23" 
                    FontFamily="Arial"
                     Width="217"
                    Click="Open2PlayerWindow"
                    BorderThickness="2" 
                    BorderBrush="Goldenrod" Canvas.Left="428" Canvas.Top="271" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <Button x:Name="singlePlayerButton" 
                    Background="DarkRed" 
                    Foreground="White" 
                    Width="217"               
                    Content="Single Player" 
                    FontFamily="Arial" 
                    FontSize="23" 
                    Click="OpensinglePlayerWindow"
                    BorderThickness="2" 
                    BorderBrush="Goldenrod" Canvas.Left="154" Canvas.Top="271" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.638,0.722" />
            <TextBox x:Name="enterPoints" 
                     Width="217" 
                     Height="20" 
                     Background="DarkRed"
                     HorizontalAlignment="Left" 
                     VerticalAlignment="Center"
                     Text="Enter Needed Points"
                     Foreground="White"
                     FontFamily="Arial" Canvas.Left="428" Canvas.Top="217" GotFocus="enterNeededPoints"  />
            <TextBox x:Name="speedBall" 
                     Width="217" 
                     Height="20" 
                     Background="DarkRed" 
                     Text="Enter Ballspeed" 
                     Foreground="white" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center" Canvas.Left="154" Canvas.Top="217" GotFocus="InputBallSpeed"  />
            <Button x:Name="Settings" 
                    Content="Settings"
                    Height="40"
                    Width="90" 
                    Background="DarkRed" 
                    FontSize="20" 
                    Foreground="White" 
                    FontFamily="Arial"
                    Canvas.Top="45" 
                    Canvas.Right="0"
                    BorderThickness="2" 
                    BorderBrush="Goldenrod"
                    Click="OpenSettingWindow"/>
            <Button x:Name="Login" 
                    Content="Login" 
                    Height="40" 
                    Width="90" 
                    Background="DarkRed" 
                    Foreground="White" 
                    FontSize="20" 
                    FontFamily="Arial" 
                    BorderBrush="Goldenrod" 
                    BorderThickness="2" 
                    HorizontalAlignment="Left" 
                    Canvas.Right="0" Click="goToLogin" />
            <Button x:Name="goToStore"
                    Width="90"
                    Height="40" 
                    Canvas.Right="0" 
                    Background="DarkRed" 
                    Foreground="White" 
                    Content="Store" 
                    FontFamily="Arial" 
                    FontSize="20" 
                    HorizontalAlignment="Left" 
                    Canvas.Left="0" 
                    VerticalAlignment="Top"
                    BorderThickness="2" 
                    BorderBrush="Goldenrod"
                    Click="OpenWindowStore"/>
        </Canvas>
    </Grid>
</Window>
