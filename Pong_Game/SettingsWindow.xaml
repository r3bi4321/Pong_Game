<Window x:Class="Pong_Game.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_Game"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="windowSetting" Background="Black">
            <Button x:Name="BackToStart" 
                    Width="100" 
                    Height="35" 
                    Content="Back to the Start" 
                    Background="DarkRed" 
                    Foreground="White" 
                    FontFamily="Arial" 
                    BorderThickness="2" 
                    BorderBrush="Goldenrod"
                    Click="BackToStart_Click"/>

            <Rectangle x:Name="rectangleBackground" 
                       Fill="White" 
                       Opacity="0.1" 
                       RadiusX="50" 
                       RadiusY="50" 
                       Width="350" 
                       Height="350" 
                       Canvas.Left="225" 
                       Canvas.Top="42" 
                       AutomationProperties.IsOffscreenBehavior="FromClip" 
                       Stroke="DarkRed"/>
            <Slider x:Name="ballSize" 
                    Minimum="10" 
                    Maximum="90"
                    Width="140"
                    Canvas.Left="418" 
                    Canvas.Top="149"
                    Background="Goldenrod" />
            <TextBlock x:Name="titleSettings"
                       Text="Settings" 
                       Width="76" 
                       Height="28" 
                       Background="#FF191919" 
                       Canvas.Left="362" 
                       Canvas.Top="50" 
                       FontSize="20" 
                       Foreground="White"
                       FontFamily="Arial"/>
            <Slider x:Name="paddleSize"
                    Maximum="200" 
                    Minimum="50" 
                    Width="140"
                    Background="Goldenrod"
                    Canvas.Left="418" 
                    Canvas.Top="208"/>
            <TextBlock x:Name="txtBallSize"
                       Text="Ballsize"
                       Background="#FF191919"
                       FontFamily="Arial" 
                       Foreground="White"
                       FontSize="15" 
                       Canvas.Left="242" 
                       Canvas.Top="153" 
                       RenderTransformOrigin="1.296,0.698"/>
            <TextBlock x:Name="txtPaddleSize" 
                       Text="Paddlesize" 
                       Width="70" 
                       FontSize="15"
                       Height="30" 
                       Foreground="White" 
                       Background="#FF191919" 
                       Canvas.Left="242"
                       Canvas.Top="210"/>
            <TextBlock x:Name="txtdarkOrLightMode" 
                       Text="Lightmode" 
                       Foreground="White" 
                       FontSize="15" 
                       FontFamily="Arial" 
                       Canvas.Left="242" 
                       Canvas.Top="274" />
            <Button x:Name="darkMode" 
                    Height="20" 
                    Width="140" 
                    Canvas.Left="418" 
                    Canvas.Top="271" 
                    Content="on" 
                    Background="Goldenrod" 
                    FontFamily="Arial" 
                    FontSize="15" Click="changeBackground"/>

        </Canvas>
    </Grid>
</Window>
