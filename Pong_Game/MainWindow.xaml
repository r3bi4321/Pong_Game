<Window x:Class="Pong_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pong Game" Height="450" Width="800"  ResizeMode="NoResize" MinHeight="450" MinWidth="800"
        KeyDown="KeyboardDown"
        KeyUp="KeyboardUp"
        SizeChanged="Window_SizeChanged" >

    <Grid>
        <Canvas x:Name="GameScreen" Background="Black" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TextBlock x:Name="ScorePlayer1" 
                       Canvas.Left="40"
                       Width="42" 
                       Height="22" 
                       Background="LightSkyBlue" 
                       Text="0" 
                       FontFamily="Arial"
                       FontSize="20" 
                       TextAlignment="Center"/>

            <TextBlock x:Name="ScorePlayer2" 
                       Width="42" 
                       Height="22" 
                       Background="LightSkyBlue"
                       Text="0" 
                       FontFamily="Arial"
                       FontSize="20" 
                       TextAlignment="Center"/>

            <Rectangle x:Name="Player1"
                       Width="20" 
                       Height="100"
                       Fill="HotPink"
                       Canvas.Left="0" 
                       Canvas.Top="200"/>

            <Rectangle x:Name="Player2" 
                       Width="20" 
                       Height="100" 
                       Fill="HotPink"
                       Canvas.Top="200"/>

            <Ellipse x:Name="GameBall" 
                     Fill="GreenYellow" 
                     Canvas.Top="200" 
                     Width="30" 
                     Height="30" 
                     Canvas.Left="360" />

            <TextBlock x:Name="CoinCount1"
                       Canvas.Left="40" 
                       Canvas.Bottom="0" 
                       Width="30"
                       Height="30"
                       Background="DarkBlue"
                       Foreground="White"
                       Text="0"
                       FontSize="20" 
                       TextAlignment="Center"/>

            <TextBlock x:Name="CoinCount2"  
                       Canvas.Bottom="0" 
                       Width="30" 
                       Height="30" 
                       Background="DarkBlue"
                       Foreground="White"
                       Text="0"
                       FontSize="20" 
                       TextAlignment="Center"
                       />
        </Canvas>
    </Grid>
</Window>
