<Window x:Class="Pong_Game.AdjustLooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_Game"
        mc:Ignorable="d"
        Title="AdjustLooks" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="changeLookGame" Background="Black">
            <Grid Canvas.Left="40" Canvas.Top="123" x:Name="GridDisplay" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Rectangle Width="10" Height="50" Fill="HotPink" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Column="0" Grid.Row="0"/>
                <Ellipse Width="25" Height="25" Fill="GreenYellow" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Column="5" Grid.Row="0"/>
                <Button Height="25" Width="60" Content="Equiped" Background="DarkRed" Foreground="White" HorizontalAlignment="Right" Margin="0,0,20,0"/>
                <Button Height="25" Width="60" Content="Equiped" Background="DarkRed" Foreground="White" HorizontalAlignment="Right" Margin="0,0,5,0" Grid.Column="5"/>
            </Grid>
            <Button x:Name="BackToStore" Content="Back to Store" Foreground="White" Background="DarkRed" Height="30" Width="80" FontFamily="Arial" Click="goToStore"/>
            <Button x:Name="BackToStart" Content="Back to Start" Foreground="White" Background="DarkRed" Height="30" Width="80" FontFamily="Arial" Canvas.Top="40" Click="goBackToStart"/>
        </Canvas>
    </Grid>
</Window>
