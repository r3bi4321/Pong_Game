<Window x:Class="Pong_Game.AdjustLooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_Game"
        mc:Ignorable="d"
        Title="AdjustLooks" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Canvas x:Name="changeLookGame" Background="Black">

            <Grid Canvas.Left="40" Canvas.Top="86" x:Name="GridDisplay" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>
            </Grid>
            <Button x:Name="BackToStore" Content="Back to Store" Foreground="White" Background="DarkRed" Height="30" Width="80" FontFamily="Arial" Click="goToStore"/>
            <Button x:Name="BackToStart" Content="Back to Start" Foreground="White" Background="DarkRed" Height="30" Width="80" FontFamily="Arial" Canvas.Top="40" Click="goBackToStart"/>
        </Canvas>
    </Grid>
</Window>
