                    <Rectangle Fill="White" Opacity="0.1" Margin="5,5,5,5" Grid.Column="3" Grid.Row="4"/>

                    <Rectangle Fill="White" Opacity="0.1" Margin="5,5,5,5" Grid.Column="5" Grid.Row="0"/>
