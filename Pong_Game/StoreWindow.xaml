                       Width="702" 
                       Fill="White" 
                       Opacity="0.1"
                       Canvas.Left="49"
                       Canvas.Top="49"/>

            <Button x:Name="backToStart" 
                    Width="100" 
                    Height="35" 
                    Background="DarkRed" 
                    FontFamily="Arial" 
                    Content="Back to the Start" 
                    FontSize="11" 
                    Foreground="White" 
