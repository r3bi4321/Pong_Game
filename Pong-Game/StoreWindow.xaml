<Window x:Class="Pong_Game.StoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_Game"
        mc:Ignorable="d"
        Title="StoreWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="Store" Background="Black">

            <Button x:Name="backToStart" 
                    Width="100" 
                    Height="35" 
                    Background="DarkRed" 
                    FontFamily="Arial" 
                    Content="Back to the Start" 
                    FontSize="11" 
                    Foreground="White" 
                    Click="OpenStartWindow" />
            <TextBlock x:Name="coinCountDisplay" 
                       Background="DarkRed" 
                       Foreground="White" 
                       Text="0" 
                       Canvas.Top="0" 
                       Canvas.Right="0" 
                       FontSize="20" 
                       Width="40" 
                       TextAlignment="Center" 
                       FontFamily="Arial"/>

        </Canvas>

    </Grid>
</Window>
