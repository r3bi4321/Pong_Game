<Window x:Class="Pong_Game.Startseite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_Game"
        mc:Ignorable="d"
        Title="Startseite" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="StartScreen" Background="Black">
            <TextBlock x:Name="Title"                   
                       Text="Pong-Game" 
                       FontFamily="Arial" 
                       TextAlignment="Center" 
                       FontSize="70" 
                       Foreground="DarkRed" 
                       Canvas.Top="60"/>
            <Button x:Name="PlayButton"
                    Background="DarkRed" 
                    Content="Play" 
                    Foreground="White" 
                    FontSize="40" 
                    FontFamily="Arial"
                     Width="160"
                    Click="OpenWindow"/>
            <TextBlock x:Name="enterPoints" 
                       Width="60" 
                       Height="20"
                       Canvas.Left="320"
                       Canvas.Top="217" 
                       Background="DarkRed"
                       HorizontalAlignment="Left" 
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="chooseBallSpeed" 
                      Width="60" 
                      Height="20"
                      Canvas.Left="400"
                      Canvas.Top="217" 
                      Background="DarkRed" 
                      SelectionChanged="chooseBallSpeed_SelectionChanged">
                <ComboBoxItem>1f</ComboBoxItem>
                <ComboBoxItem>1.5f</ComboBoxItem>
                <ComboBoxItem>2f</ComboBoxItem>
            </ComboBox>
            <Button x:Name="Settings" Content="Settings" Height="40" Width="90" Background="DarkRed" FontSize="20" Foreground="White" Canvas.Top="0" Canvas.Right="0" Click="OpenSettingWindow"/>
        </Canvas>
    </Grid>
</Window>
